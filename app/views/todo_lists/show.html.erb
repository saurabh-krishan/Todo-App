
    <p style="color: green" class="flashes"><%= notice %></p>
<div class = "card px-3 py-3 mt-5">
    <%= render @todo_list %>
    <div id="todo_items_wrapper" >
        <%= render @todo_list.todo_items %>
        <div id="form" class="mt-3">
            <%= render "todo_items/form" %>
        </div>
    </div>
    

    <div class="mt-3">
        <%= link_to "Edit", edit_todo_list_path(@todo_list), class: "btn btn-outline-primary btn-sm mt-2" %> |
        <%= link_to "Go Back", todo_lists_path, class: "btn btn-outline-primary btn-sm mt-2" %>

        <%= button_to "Destroy", @todo_list, method: :delete, class: "btn btn-outline-danger btn-sm mt-2" %>
    </div>
</div>

